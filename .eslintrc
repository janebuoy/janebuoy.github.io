{
  "root": true,
  "parser": "vue-eslint-parser",
	"parserOptions": {
    "parser": "espree",
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
	"plugins": ["prettier"],
  "rules": {
    "quotes": ["error", "single"],
    "no-undef": "off",
    "vue/multi-word-component-names": "off",
    "vue/component-name-in-template-casing": ["error", "PascalCase"]
  }
}